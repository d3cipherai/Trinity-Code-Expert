# Create/update .gitignore for Trinity Awaken
cat > .gitignore << 'EOF'
# Dependencies
node_modules/
/.pnp
.pnp.js

# Production builds
.next/
out/
build/
dist/

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Coverage directory used by tools like istanbul
coverage/
*.lcov

# nyc test coverage
.nyc_output

# Environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Vercel
.vercel

# TypeScript
*.tsbuildinfo
next-env.d.ts

# Azure Functions
azure-functions/node_modules/
azure-functions/dist/
azure-functions/local.settings.json

# Trinity Memory (keep structure, ignore sensitive data)
trinity-memory/sensitive/
memory/private/

# VS Code (keep settings, ignore workspace)
.vscode/launch.json
.vscode/tasks.json
.vscode/*.code-workspace

# TODO Tree cache
.vscode/.ropeproject

# MCP Orchestra temp files
mcp-orchestra/temp/
mcp-orchestra/*.log

# Legal analysis temp files
legal-analysis/temp/
legal-analysis/cache/

# Trinity Independent (if needed in main repo)
trinity-independent/.env
trinity-independent/node_modules/
trinity-independent/build/

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Optional npm cache directory
.npm

# Optional REPL history
.node_repl_history

# Output of 'npm pack'
*.tgz

# Yarn Integrity file
.yarn-integrity

# Temporary folders
tmp/
temp/
EOF